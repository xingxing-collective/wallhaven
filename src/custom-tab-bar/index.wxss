.tab-bar {
  width: 100%;
  height: 4rem;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: env(safe-area-inset-bottom);
  backdrop-filter: blur(1rem);
}

.bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bar-img {
  width: 24px;
  height: 24px;
  margin-bottom: 3px;
}
.bar-text{
  color: 	#D3D3D3;
  font-size: 14px;
}